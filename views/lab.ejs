<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link type="text/css" rel='stylesheet' href='/public/stylesheets/style.css' />
  <link type="text/css" rel='stylesheet' href='/public/stylesheets/reset.css' />
  <link type="text/css" rel="stylesheet" href="/public/stylesheets/parts.css" />

</head>

<body>
  <%- include('./error_messages'); %>
  <% if(isAuth) { %>
    <%- include('./header.ejs'); %>

    <div class="main_wrapper">
      <div class="main_body">
        <div class="post_area">
          <% for(let post of posts) { %>
              <% if(post.user_id == userId) { %>
                  <li class="post my_post"><span><%= post.contents %></span></li>
              <% } else { %>
                  <li class="post others_post"><span><%= post.contents %></span></li>
              <% } %>
          <% } %>
        </div>
        <form action="/" method="post">
          <div class="writing_area">
            <textarea required name="add" rows="1"></textarea>
            <input type="submit" class="enter">
          </div>
        </form>
      </div>
    </div>
  <% } else { %>
    <h1>Welcome to the Tech Log</h1>
    <a href="/signin">Sign in now!</a>
  <% } %>
</body>

</html>