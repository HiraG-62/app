<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link type="text/css" rel='stylesheet' href='/public/stylesheets/style.css' />
  <link type="text/css" rel='stylesheet' href='/public/stylesheets/reset.css' />

</head>

<body>
  <%- include('./error_messages'); %>
  <% if(isAuth) { %>
  <header class="site-header">
    <div class="header_wrapper">
      <nav class="nav">
        <button class="nav_button" aria-expanded="false" type="button" aria-label="menu">menu</button>
        <ul class="nav_wrapper active">
          <div class="nav_list">
            <li class="nav_item">
              <a href='#'>全体連絡</a>
            </li>
            <li class="nav_item">
              <a href="#">マイページ</a>
            </li>
            <li class="nav_item">
              <a href="#">研究室</a>
            </li>
            <li class="nav_item">
              <a href="#">test4</a>
            </li>
            <li class="nav_item">
              <a href="#">test5</a>
            </li>
          </div>

          <div class="logout">
            <p style="color: white;">ログアウト</p>
            <a href="/logout"></a>
          </div>
        </ul>
      </nav>
      <a href="#" class="title">Leaf</a>
      <button class="button button-icon">account</button>
    </div>
    <script src="/public/javascripts/header.js"></script>
  </header>

  <div class="main_wrapper">
    <div class="main_body">
      <div class="post-area">
        <% for(let post of posts) { %>
            <li class="post my_post"><span><%= post.content %></span></li>
        <% } %>
      </div>
      <form action="/" method="post">
        <div class="writing-area">
          <textarea required name="add" rows="1"></textarea>
          <input type="submit" class="enter">
        </div>
      </form>
    </div>
  </div>
  <% } else { %>
    <h1>Welcome to the Tech Log</h1>
    <a href="/signin">Sign in now!</a>
  <% } %>
</body>

</html>